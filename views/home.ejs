<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>GoRent | Home</title>
  </head>
  <body>
    <div class="container">
      <!-- topbar start -->
      <div
        class="d-flex justify-content-between container mt-4 align-items-end"
      >
        <div>
          <p class="mb-0">Lokasi</p>
          <!-- Button trigger modal -->
          <button
            type="button"
            class="d-flex gap-3 bg-transparent border-0 fw-semibold p-0"
            data-bs-toggle="modal"
            data-bs-target="#lokasi"
          >
            Kudus
            <i class="bi bi-chevron-down"></i>
          </button>

          <!-- Modal -->
          <div
            class="modal fade"
            id="lokasi"
            tabindex="-1"
            aria-labelledby="lokasiLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="lokasiLabel">
                    Tentukan lokasi
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <input
                    type="text"
                    class="form-control"
                    id="lokasi"
                    name="lokasi"
                    placeholder="Lokasi Anda"
                    required
                  />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="button" class="btn btn-primary">
                    Save changes
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="dropdown">
          <button
            class="profile-button"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            F
          </button>
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" href="#">
                <i class="bi bi-person"></i>
                Profile
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="#">
                <i class="bi bi-info-circle"></i>
                About
              </a>
            </li>
            <li>
              <a class="dropdown-item text-danger" href="#">
                <i class="bi bi-box-arrow-right"></i>
                Sign Out
              </a>
            </li>
          </ul>
        </div>
      </div>
      <!-- topbar end -->

      <!-- Header with Search and Icons -->
      <div class="d-flex justify-content-between align-items-center mb-5 mt-4">
        <div class="search-container flex-grow-1 me-3">
          <div class="d-flex align-items-center">
            <i class="bi bi-search me-2 text-muted"></i>
            <input type="text" class="search-input" placeholder="Cari Produk" />
          </div>
        </div>
        <div class="d-flex gap-3">
          <button
            class="btn btn-light"
            type="button"
            data-bs-toggle="modal"
            data-bs-target="#filter"
          >
            <i class="bi bi-filter"></i>
          </button>
          <button class="btn btn-light">
            <i class="bi bi-bag"></i>
          </button>

          <!-- Modal Filter -->
          <div
            class="modal fade"
            id="filter"
            tabindex="-1"
            aria-labelledby="filterLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="filterLabel">Filter</h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body d-flex flex-column gap-2">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <label for="categoryDropdown ">Kategori</label>
                    <select class="form-control w-50" id="categoryDropdown">
                      <option>Gadget</option>
                      <option>Peralatan Rumah Tangga</option>
                      <option>Peralatan Audio & Video</option>
                      <option>Peralatan Kantor</option>
                      <option>Peralatan Gaming</option>
                      <option>Peralatan Fotografi/Videografi</option>
                      <option>Peralatan Teknologi Khusus</option>
                    </select>
                  </div>
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <label for="categoryDropdown ">Kondisi</label>
                    <select class="form-control w-50" id="categoryDropdown">
                      <option>Sangat baik</option>
                      <option>Baik</option>
                      <option>Layak pakai</option>
                    </select>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary w-100">
                    Filter
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Terlaris Section -->
      <div class="mb-4">
        <h2 class="section-title">Terlaris</h2>
        <div class="scroll-container d-flex gap-3 pb-3 overflow-x-auto hidden-scroll">
          <% products.forEach(product => { %>
          <div class="col-6 col-md-4 col-lg-2 no-select">
            <div class="product-card">
              <img
                src=<%= product.image %>
                alt=<%= product.name %>
                class="product-img"
              />
              <div class="p-3">
                <h3 class="product-title"><%= product.name %></h3>
                <p class="product-price">
                  Rp<%= product.pricePerDay.toLocaleString() %><span
                    class="price-period"
                    >/hari</span
                  >
                </p>
                <div class="d-flex align-items-center">
                  <div class="star-rating me-1">★★★★★</div>
                  <span class="rating-count">(11)</span>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Rekomendasi Section -->
      <div>
        <h2 class="section-title">Rekomendasi</h2>
        <div class="row g-3">
            <% products.forEach(product => { %>
                <div class="col-6 col-md-4 col-lg-2 no-select">
                  <div class="product-card">
                    <img
                      src=<%= product.image %>
                      alt=<%= product.name %>
                      class="product-img"
                    />
                    <div class="p-3">
                      <h3 class="product-title"><%= product.name %></h3>
                      <p class="product-price">
                        Rp<%= product.pricePerDay.toLocaleString() %><span
                          class="price-period"
                          >/hari</span
                        >
                      </p>
                      <div class="d-flex align-items-center">
                        <div class="star-rating me-1">★★★★★</div>
                        <span class="rating-count">(11)</span>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
        </div>
      </div>
    </div>
    <%- include('./partials/script.ejs') %>
  </body>
</html>
